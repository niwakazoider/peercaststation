<Window x:Class="PeerCastStation.WPF.ChannelLists.Dialogs.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding ChannelName}" Width="360" Height="Auto"
        ResizeMode="NoResize"
        SizeToContent="Height"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
  <Window.Resources>
    <Style TargetType="TextBox">
      <Setter Property="Margin" Value="2"/>
    </Style>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="2"/>
    </Style>
  </Window.Resources>
  <StackPanel>
    <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MessageText}"/>
    </Grid>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <Button Grid.Column="1" Content="送信" Click="Button_Click" Command="{Binding PostMessage}" IsDefault="True"/>
    </Grid>
  </StackPanel>
</Window>
